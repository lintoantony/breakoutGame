/*@author : linto (lintoka123@gmail.com)*/package com.linto.breakout.view {		import flash.display.Sprite;	import flash.events.Event;		public class Brick extends Sprite{				public static var COLLAPSE_BRICK:String = "collapseBrick";				private var viewRef:GameView;		private var brickMc:BrickMc;		public function Brick(viewRef:GameView) {						this.viewRef = viewRef;						this.brickMc = new BrickMc();			this.brickMc.name = "brickMc";			this.addChild(this.brickMc);			this.brickMc.brickStates.gotoAndStop(Math.round(Math.random()*3) + 1);						this.addEventListener(Event.ENTER_FRAME, this.onBrickAdded);		}				private function onBrickAdded(evt:Event):void {			if (this.hitTestObject(this.viewRef.ball)) {				this.viewRef.ball.yspeed = -this.viewRef.ball.yspeed;				this.clearBrick();				this.viewRef.onCollapseBrick();			}		}				public function clearBrick():void{			this.removeEventListener(Event.ENTER_FRAME, this.onBrickAdded);			var brickMc:BrickMc = this.getChildByName("brickMc") as BrickMc;			if(brickMc){				this.removeChild(brickMc);			}		}			}	}