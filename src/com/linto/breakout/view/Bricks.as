/*@author : linto (lintoka123@gmail.com)*/package com.linto.breakout.view {		import flash.display.Sprite;	import flash.events.Event;		public class Bricks extends Sprite{				private var viewRef:GameView;		private var bricksHolder:Sprite;		public function Bricks(viewRef:GameView) {			this.viewRef = viewRef;		}				public function addBricks(totalBricks:Number):void{			this.bricksHolder = new Sprite();			this.addChild(this.bricksHolder);						var brick:Brick;			var yVal:Number = 0;			var xVal:Number = 0;			for(var i:int=0; i<totalBricks; i++){				brick = new Brick(this.viewRef);				brick.name = "brick_"+i;				this.bricksHolder.addChild(brick);								brick.x = xVal;				brick.y = yVal;								xVal += (brick.width + 2);				if((i+1)%5 == 0 && i != 0){					xVal = 0;					yVal += (brick.height + 2);				}			}					}				public function clearBricks(totalBricks:Number):void{			var brick:Brick;			for(var i:int=0; i<totalBricks; i++){				brick = this.bricksHolder.getChildByName("brick_"+i) as Brick;				brick.clearBrick();				this.bricksHolder.removeChild(brick);			}		}	}}